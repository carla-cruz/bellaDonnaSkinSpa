<%= render 'shared/appointment_banner'%>

<div class="site-container policies container">
	<h1>Our Policies</h1>
	
	<ul id="policy_list">
		<% @policies.each do |p| %>

		<li id="<%=p.id%>">
			<div class="col-md-12 policy">
				<h2><%= p.name %></h2>
				<p><%= p.description %></p>
			</div>
		</li>
		<% end %>
	</div>
</ul>
</div>