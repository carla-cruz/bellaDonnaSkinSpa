<div class="promotions container">
	<%if user_signed_in? && is_admin? %>
	<%= link_to "Add a Promotion", new_promotion_path, id: "new_promotion_link", remote: true %>
	<br><br>

	<ul id="promotion_list">

		<% @promotions.each do |p| %>
		<div class="col-md-4 promotion">
			<li>
				<h2><%= p.header %></h2>
				<p><%= p.subheader %></p>
				<p>Date Created: <%= p.created_at.strftime("%d %b. %Y") %></p>
				<p>Promotion is: <strong><%= p.is_active == true ? "ACTIVE" : "INACTIVE" %></strong></p>
				<%= link_to "Make Active", activate_promotion_path(p.id), class: "btn btn-success" %>
				
				<%= link_to "Delete", p, method: :delete, class: "delete_link btn btn-danger", remote: true %>
				
			</li>
		</div>
		<% end %>
	</ul>

	<% else %>

	<ul id="promotion_list">

		<% @promotions.each do |p| %>
		<div class="col-md-4 promotion">
			<li>
				<h2><%= p.header %></h2>
				<p><%= p.subheader %></p>
				<p>Date: <%= p.created_at.strftime("%d %b. %Y") %></p>
			</li>
		</div>
		<% end %>
	</ul>

	<% end %>
</div>