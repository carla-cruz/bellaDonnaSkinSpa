<li id="<%= @product.id %>">
  <div class="col-md-12 product">
   <%= image_tag(@product.image_url, class: "img-responsive") %>
   <h2><%= @product.name %></h2>
   <span class="glyphicon glyphicon-usd"></span><p class="product-price"><strong><%= @product.price %></strong></p>
   <p><%= @product.description %></p>

   <%if user_signed_in? && is_admin? %>
   <div class="admin-links pull-right">
     <%= link_to "Delete", @product, method: :delete, class: "delete_link", remote: true %>
     &nbsp;&nbsp;&nbsp;
     <%= link_to "Edit", edit_product_path(@product), class: "edit_link", remote: true %>
   </div>

   <% end %>
 </div>
</li>



