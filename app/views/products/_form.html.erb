<%= nested_form_for @product, :html => {:id => "new_product", :class => "form row"} do |f| %>
<a class="close" href="">X</a>
<div class="form-inline">
	<div class="form-group col-sm-9 marginTop">
		<%= f.text_field :name, class: "form-control", placeholder: "Name" %>
	</div>
	<div class="form-group col-sm-3 marginTop">
		<%= f.text_field :price, class: "form-control", placeholder: "Price" %>
	</div>
</div>
<div class="form-inline clearfix">
	<div class="form-group col-sm-12">
		<%= f.text_field :image_url, class: "form-control", placeholder: "Image URL" %>
	</div>
	<div class="form-group col-sm-12">
		<%= f.text_area :description, class: "form-control marginBottom", placeholder: "Description" %>
	</div>
</div>
<%= f.submit class: "btn btn-primary"  %>
<% end %>